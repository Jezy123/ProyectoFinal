{% extends 'base.html.twig' %}
{% block title %}PlayGe{% endblock %}

{% block body %}

<body>

  <div class="container">
    <div class="row mt-4 bg-dark userinfo" data-id="{{app.user.id}}">
        <div class="col-12  col-sm-4 mt-4 mb-4">

            <small id="emailHelp" class="form-tex text-light">Apuesta</small>

            <div class="input-group mb-3">

               <div class="input-group-prepend">
                  <button class="btn btn-outline-secondary" type="button">Button</button>
                </div>

               <input type="number" class="form-control inputCredito"  min="1" max="30000" value="1" >

               <div class="input-group-append">
                 <button class="btn btn-outline-secondary multiplicaCreditos" type="button" value="1.5">X 1.5</button>
                 <button class="btn btn-outline-secondary multiplicaCreditos" type="button" value="2">X 2</button>
               </div>
            </div>

            <div class="d-grid gap-2">
                <button class="btn btn-warning empieza-crash" type="button">Empezar juego</button>
            </div>
    
            <div class="d-grid gap-2">
                <button class="btn btn-danger mt-5 mantener-crash" type="button">Mantener</button>
            </div>
            <p class="text-light justify-content-center muestraDelResultado"></p>
        </div>

        <div class="col-12  col-sm-8 mt-4 mb-4 pb-4 ">
            <div class="row mb-3">
                <div class="col-4">
                    <p class="text-light">Multiplicador</p>
                </div>
                <div class="col-6">
                    <p class="text-light  font-weight-bold numeroMultiplicado"></p>
                </div>
            </div>
            <div class="recuadroMovimiento-cohete">
            <img class="rocket-img" src="./css/imgs/rocket0.png"> 
            </div>       
        </div>

        


    </div>
  </div>
  


</body>

    <script src="js/crash.js"></script>

{% endblock %}

